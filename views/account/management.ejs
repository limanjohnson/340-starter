
<main>
  <h1>Account Management</h1>
  <% if (messages.notice) { %>
    <p class="flash-message"><%= messages.notice %></p>
  <% } %>
  <% if (errors && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  <% if (isLoggedIn) { %>
    <h2>Welcome <%= user.account_firstname %></h2>

    <p><a href="/account/update/<%= user.account_id %>">Update Account Information</a></p>

    <% if (user.account_type === 'Employee' || user.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Access Inventory Management</a></p>
    <% } %>
  <% } %>
</main>