<!-- Content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { %>
    <h1>Login</h1>
<%    } %>

<!-- Message block -->
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<div class="wrapper">
    <p id="error-message"></p>
    <form action="/account/register" method="post" id="registrationForm">
        <div>
            <label for="account_firstname">
                <svg
              xmlns="http://www.w3.org/2000/svg"
              height="24px"
              viewBox="0 -960 960 960"
              width="24px"
              fill="#1f1f1f"
            >
              <path
                d="M480-480q-66 0-113-47t-47-113q0-66 47-113t113-47q66 0 113 47t47 113q0 66-47 113t-113 47ZM160-160v-112q0-34 17.5-62.5T224-378q62-31 126-46.5T480-440q66 0 130 15.5T736-378q29 15 46.5 43.5T800-272v112H160Z"
              />
            </svg>
            </label>
            <input 
                type="text"
                name="account_firstname"
                id="account_firstname"
                placeholder="Firstname"
                required
                value="<% locals.account_firstname %>"
                />
        </div>
        <div>
            <label for="account_lastname">
                <svg
              xmlns="http://www.w3.org/2000/svg"
              height="24px"
              viewBox="0 -960 960 960"
              width="24px"
              fill="#1f1f1f"
            >
              <path
                d="M480-480q-66 0-113-47t-47-113q0-66 47-113t113-47q66 0 113 47t47 113q0 66-47 113t-113 47ZM160-160v-112q0-34 17.5-62.5T224-378q62-31 126-46.5T480-440q66 0 130 15.5T736-378q29 15 46.5 43.5T800-272v112H160Z"
              />
            </svg>
            </label>
            <input 
                type="text"
                name="account_lastname"
                id="account_lastname"
                placeholder="Lastname"
                required
                value="<% locals.account_lastname %>"
            />
        </div>
        <div>
            <label for="account_email">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                height="24px"
                viewBox="0 -960 960 960"
                width="24px"
                fill="#1f1f1f"
              >
                <path
                  d="M160-160q-33 0-56.5-23.5T80-240v-480q0-33 23.5-56.5T160-800h640q33 0 56.5 23.5T880-720v480q0 33-23.5 56.5T800-160H160Zm320-280 320-200v-80L480-520 160-720v80l320 200Z"
                />
              </svg>
            </label>
            <input
              type="email"
              name="account_email"
              id="account_email"
              placeholder="Email"
              required
              value="<% locals.account_email %>"
            />
          </div>
          <div>
            <label for="account_password">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                height="24px"
                viewBox="0 -960 960 960"
                width="24px"
                fill="#1f1f1f"
              >
                <path
                  d="M240-80q-33 0-56.5-23.5T160-160v-400q0-33 23.5-56.5T240-640h40v-80q0-83 58.5-141.5T480-920q83 0 141.5 58.5T680-720v80h40q33 0 56.5 23.5T800-560v400q0 33-23.5 56.5T720-80H240Zm240-200q33 0 56.5-23.5T560-360q0-33-23.5-56.5T480-440q-33 0-56.5 23.5T400-360q0 33 23.5 56.5T480-280ZM360-640h240v-80q0-50-35-85t-85-35q-50 0-85 35t-35 85v80Z"
                />
              </svg>
            </label>
            <input
              type="password"
              name="account_password"
              id="account_password"
              placeholder="Password"
              required
              pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
            />
          </div>
          <div>
            <p class="guideline">Password must be at lest 12 characters, have at least 1 uppercase character, 1 number, and 1 special character</p>
          </div>
        <button type="submit">Signup</button>
    </form>
    <p>Already have an account? <a href="./login">Login</a></p>
</div>