<h1><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form class="inventory-form" action="/inv/update" method="post">
    <label for="inv_make">Car Make</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make || '' %>"/>

    <label for="inv_model">Car Model</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model || '' %>"/>

    <label for="inv_year">Year</label>
    <input type="number" id="inv_year" name="inv_year" min="0" step="1" required value="<%= inv_year || '' %>"/>

    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" rows="5" cols="40" required><%= inv_description || '' %></textarea>

    <label for="inv_image">Image</label>
    <img src="<%= inv_image || 'images/vehicles/no-image.png' %>" alt="Vehicle Image" class="vehicle-image">
    <input type="file" id="inv_image" name="inv_image" />

    <label for="inv_thumbnail">Thumbnail</label>
    <img src="<%= inv_thumbnail || 'images/vehicles/no-image.png' %>" alt="Vehicle Thumbnail" class="vehicle-thumbnail">
    <input type="file" id="inv_thumbnail" name="inv_thumbnail" />

    <label for="inv_price">Price</label>
    <input type="number" name="inv_price" id="inv_price" min="0" step="1" required value="<%= inv_price || '' %>"/>

    <label for="inv_miles">Miles</label>
    <input type="number" name="inv_miles" id="inv_miles" required value="<%= inv_miles || '' %>"/>

    <label for="inv_color">Color</label>
    <input type="text" name="inv_color" id="inv_color" required value="<%= inv_color || '' %>"/>

    <label for="classification_id">Classification</label>
    <%- classificationSelect %>

    <input type="hidden" name="inv_id" value="<%= inv_id %>" />
    <button type="submit">Update Vehicle</button>
</form>
